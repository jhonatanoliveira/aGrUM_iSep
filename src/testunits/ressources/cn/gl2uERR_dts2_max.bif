
network aGrUM_BN {
   property version 1.0;
   property author aGrUM;
}

variable A {
   type discrete[2] {0, 1};
}

variable B {
   type discrete[2] {0, 1};
}
variable DB {
   type discrete[2] {0, 1};
}


probability ( A ) {
   default 0.5 0.5;
}

probability ( DB | A ) {
   (0) 1 1;
   (1) 1 1;
}

probability ( B | DB, A ) {
   (0,0) 0.6 0.4;
   (1,0) 0.2 0.8;
   (0,1) 0.3 0.7;
   (1,1) 0.7 0.3;
}

